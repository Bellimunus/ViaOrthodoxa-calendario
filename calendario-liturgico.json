    let dataAtual = new Date();

    function formatarData(data) {
      const mes = String(data.getMonth() + 1).padStart(2, '0');
      const dia = String(data.getDate()).padStart(2, '0');
      return `${mes}-${dia}`;
    }

    function renderizarFestas() {
      const conteudo = document.getElementById('conteudo');
      conteudo.innerHTML = '';
      const dataFormatada = formatarData(dataAtual);
      const santosHoje = santos.filter(s => s.data === dataFormatada);

      if (santosHoje.length > 0) {
        santosHoje.forEach(santo => {
          const div = document.createElement('div');
          div.className = 'santo';
          div.style.borderLeftColor = santo.cor_bizantina;
          div.innerHTML = `
            <h2>${santo.nome}</h2>
            <p>${santo.titulo}</p>
            <div class="cores-liturgicas">
              <div class="cor-bizantina" style="background:${santo.cor_bizantina}" title="Cor Bizantina"></div>
              <div class="cor-romana" style="background:${santo.cor_romana}" title="Cor Romana"></div>
            </div>
          `;
          conteudo.appendChild(div);
        });
      } else {
        conteudo.innerHTML = `
          <div class="sem-festa">
            <p>Não há festas litúrgicas registradas para hoje (${dataFormatada}).</p>
            <div class="oracao">
              À vossa proteção recorremos, ó Santa Mãe de Deus; não desprezeis as nossas súplicas em nossas necessidades, mas livrai-nos sempre de todos os perigos, ó Virgem gloriosa e bendita.
            </div>
          </div>
        `;
      }
    }

    function navegar(direcao) {
      const hoje = new Date(dataAtual);
      for (let i = 1; i <= 365; i++) {
        hoje.setDate(hoje.getDate() + direcao);
        const novaData = formatarData(hoje);
        const encontrou = santos.some(s => s.data === novaData);
        if (encontrou) {
          dataAtual = new Date(hoje);
          renderizarFestas();
          return;
        }
      }
    }

    renderizarFestas();
